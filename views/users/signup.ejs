<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"> Username </label>
                <input type="text" name="username" id="username"  class="form-control" placeholder="Enter username" required/>
        <div class="valid-feedback">username looks good!</div>    
        <div class="invalid-feedback">Please enter a username to signup</div>        

            </div>
            <div class="mb-3">
                <label for="email" class="form-label"> Email </label>
                <input type="email" name="email" id="username"  placeholder="......@gmail.com" class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid  email</div>        

            </div>
            <div class="mb-3">
                <label for="password" class="form-label"> Password </label>
                <input type="text" name="password" id="password"  placeholder="Enter a strong password" class="form-control" required/>
        <div class="valid-feedback">password looks good!</div>    
        <div class="invalid-feedback">Please enter a strong password</div>        


            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>